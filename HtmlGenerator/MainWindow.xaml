<Window x:Class="HtmlGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HtmlGenerator"
        mc:Ignorable="d"
        Title="Heng HTML Creator" Height="450" Width="800" Icon="/sokheng_html.png">
    <Grid>
        <Button x:Name="buildButton" Content="Build HTML" Click="Button_Click" HorizontalAlignment="Center" Width="124" Height="38" VerticalAlignment="Center" Foreground="White" Background="#FF004D94" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="showButton" Content="Show Location" HorizontalAlignment="Center" VerticalAlignment="Center" Height="42" Width="124" Background="#FF508A00" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,100,0,0" Click="showButton_Click"/>
        <Label x:Name="messageLabel" Content="HTML File Created" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,-100,0,0"/>
    </Grid>
</Window>
